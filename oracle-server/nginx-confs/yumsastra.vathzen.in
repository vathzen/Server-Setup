server{	

        root /home/ubuntu/websites/yumsastra;

        index index.html;

        server_name yumsastra.vathzen.in;

        location / {
                try_files $uri $uri/ =404;
        }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/blog.vathzen.in/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/blog.vathzen.in/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server{
        listen 80;
	server_name yumsastra.vathzen.in;
}
server{
    if ($host = yumsastra.vathzen.in) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name yumsastra.vathzen.in;
    listen 80;
    return 404; # managed by Certbot
}
