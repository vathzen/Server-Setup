# Redirect all HTTP to HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    return 301 https://$host$request_uri;
}

# Catch-all for unmatched SSL requests
server {
    listen 443 ssl default_server;
    listen [::]:443 ssl default_server;
    ssl_reject_handshake on;
    return 444;
}

# Main domain
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name vathzen.in;

    ssl_certificate /etc/letsencrypt/live/vathzen.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vathzen.in/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff";
    add_header X-Frame-Options "SAMEORIGIN";
    add_header Referrer-Policy "strict-origin";

    root /home/ubuntu/websites/vathzen/build;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
}

# Redirect www to non-www
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.vathzen.in;

    ssl_certificate /etc/letsencrypt/live/vathzen.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vathzen.in/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    return 301 https://vathzen.in$request_uri;
}

